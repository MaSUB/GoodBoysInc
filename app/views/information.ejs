<!DOCTYPE html>

<html>
    <head>
        <title> <%= siteTitle %>--<%= pageTitle %></title>
        <link rel="stylesheet" type="text/css" href="/css/styles.css">
        <link href="https://fonts.googleapis.com/css?family=Fjalla+One" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Schoolbell" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    </head>
    <body id="<%= pageID %>">

      <!--  Start of header section  -->
        <div class='header'>
          <div class="top-header">
            <h1 id="page-title">GoodBoysInc.</h1>
          </div>
          <div class="nav-bar">
            <div class=nav-bar-item>
              <a href="https://goodboysinc-mws5966.c9users.io/">Home</a>
            </div>
            <div class=nav-bar-item>
              <a href="https://goodboysinc-mws5966.c9users.io/login">Login</a>
            </div>
            <div class=nav-bar-item>
              <a href="https://goodboysinc-mws5966.c9users.io/account">Account</a>
            </div>
            <div class=nav-bar-item>
              <a href="https://goodboysinc-mws5966.c9users.io/admin">Admin</a>
            </div>
          </div>
        </div>
        <!-- End of header section  -->

        <!-- Start of content section  -->
        <form action="/information/info" method="post">
          <div class="content">
            <div class="content-row-info">
              <div class="info-wrapper">
                <h2 class="content-header">Please Enter Required Information</h2>
                <div class="info-form">
                  <div class="form-row">
                    <input class="input-inRow" type="text" placeholder="First Name" name="fname"/>
                    <input class="input-inRow" type="text" placeholder="Last Name" name="lname">
                    <input class="input-inRow" type="text" placeholder="Phone Number" name="pNumber">
                  </div>
                  <div class="form-row">
                    <input class="input-inRow" type="text" placeholder="Paste Facebook Link" name="facebookLink"/>
                    <input class="input-inRow" type="text" placeholder="Twitter @name" name="twitterLink"/>
                  </div>
                  <div class="form-row">
                    <input class="input-inRow" type="email" placeholder="Email" name="email">
                  </div>
                  <div class="form-row">
                    <input class="input-inRow" type="text" placeholder="Address" name="address1">
                    <input class="input-inRow" type="text" placeholder="City, State, Zip" name="address2">
                  </div>
                  <div class="form-row">
                    <textarea class="input-row word_count" id="info-area" placeholder="Talk about yourself - Will not submit if under 600 words!" name="aboutYou" cols="30" rows="5"></textarea>
                    <div id="example1_count" style="display:none"></div>
                  </div>
                  <div class="form-row">
                      <input class="form-submit" id="sub_button" type="submit" value="Submit">
                  </div>
                </div>
              </div>
            </div>
          </div>
        <form>
        <!--  End of content section  -->

        <!-- Start of footer section -->
        <div class="footer">
          <div class="footer-left">
            <p id='ftr-1' class="footer-text">GoodBoysInc</p>
            <p id='ftr-2' class="footer-text">CMPSC 421</p>
            <p id='ftr-2' class="footer-text">Soaring Eagles</p>
          </div>
          <div class="footer-right">
            <a  target="_blank" href="https://github.com/MaSUB/GoodBoysInc">
              <img id='git-link' src="http://icon-icons.com/icons2/790/PNG/512/github_icon-icons.com_65450.png" alt="github">
            </a>
          </div>
        </div>
      <!-- End of footer section -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        <script src="/reload/reload.js/"></script>
    </body>
</html>

<script>
  $(document).ready(function() {

    $('.word_count').each(function() {
        var input = '#' + this.id;
        var count = '#example1_count';
        $(count).show();
        word_count(input, count);
        $(this).keyup(function() { word_count(input, count) });
    });

});

function word_count(field, count) {

    var number = 0;
    var matches = $(field).val().match(/\b/g);
    if(matches) {
        number = matches.length/2;
    }
    $(count).text( number + ' word' + (number != 1 ? 's' : '') + ' approx');

    if(number > 599){
      $("#sub_button").attr("disabled", false)
    } else {
      $("#sub_button").attr("disabled", true)
    }
}
</script>
